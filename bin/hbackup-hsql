#h: Usage: $0 [-S TYPE][-U URL][-d DATABASE][-v][-lbr]
#h:
#h: Perform a backup of a database.
. hutil
. hbackup
. hsql
hbackup_hsql() {
    ## Parse command line arguments.
    local OPTIND optopt= ops= database=
    while getopts "U:S:d:vblr" optopt;do # OPTARG
        local ops="${ops}${optopt}"
        case $optopt in
            U)  hsql -U "${OPTARG}";;
            S)  hsql -S "${OPTARG}";;
            d)  local database="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    if test -n "${database}";then
        local database="${database}"
    else
        local database="${HSQL_URL_DATABASE}"
    fi
    
    hbackup -c "hsql-${database}"
    HSQL_URL_DATABASE=
    
    ## Operations.
    case "${ops}" in
        *v*) echo ""
             echo "## SQL Connection:"
             echo ""
             hsql -v
             echo ""
             echo "## Backup directories:"
             echo ""
             hbackup -v
             echo "";;
    esac
    case "${ops}" in
        *l*) hbackup -l 'hsql-'
             ;;
        *b*) hutil errif "Please specify a database." test ! -n "${database}"
             local filename="${HBACKUP_LOCAL_REPOSITORY}/${HBACKUP_NAME}.${HSQL_URL_PROTOCOL}"
             hutil info "Saving database ${database} to ${filename} ..."
             mkdir -p "${HBACKUP_LOCAL_REPOSITORY}"
             hsql -b "${database}" > "${filename}"
             hutil info "Done"
             ;;
        *r*) local filename="`hbackup -l "hsql-${database}.*${HSQL_URL_PROTOCOL}" | tail -n 1`"
             hutil errif \
                   "Can't find any backup file starting with hsql-${database} with suffix ${HSQL_URL_PROTOCOL}" \
                   test ! -n "${filename}"
             hutil info "Deleting ${database} ..."
             hsql -r "${database}"
             hutil info "Creating database ${database} ..."
             hsql -d "${database}"
             export HSQL_URL_DATABASE="${database}"
             hutil info "Restoring ${database} from ${filename} ..."
             cat "${filename}" | sed '/^SET @@GLOBAL.GTID_PURGED=/d' | hsql -i;;
    esac
}



## --------------------------------------------------------------------------------
if test @"`basename "$0"`" = @"hbackup-hsql";then
    if test -n "$1";then
        hbackup_hsql "$@"
    else
        hutil help
    fi
fi
